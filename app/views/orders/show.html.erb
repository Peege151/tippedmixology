
<div id="contentwrap">
  <div id="content">
              <div class="progress progress-striped active">
                <div class="progress-bar six-sec-ease-in-out" role="progressbar"  aria-valuetransitiongoal="100"></div>
              </div>
   
    <h2> Thank You For Your Order! </h2>

    <h3> An email has been sent to <%= @order.email %>! </h3>
    <div id="shipping_products_preview_wrap">
    <h2>You Have Ordered</h2>
      <table id="shipping_products_preview">
        <% @order.cart.line_items.each do |item| %>  
          <tr class="top_cart">
            <td class="img"><%= image_tag(item.product.image_url(:thumb)) %> </td>
                  <td class="cart_qty"> 
                  <%=  "#{item.quantity}" %>
                  </td>
              <td class="cart_item"> <%= link_to "#{item.product.title}", product_path(:id => item.product_id) %>
              </td>
              <td class="cart_description"> <%= truncate item.product.description, length:160 %> <%= link_to "read more", "http://localhost:3000/products/#{item.product_id}"%> </td> 
              <td class="cart_price"><%= (item.product.price) * (item.quantity) %> </td>
            </tr>
          <% end %>     
      </table>
   <%= link_to "Edit Cart Contents", cart_path(@cart) %>
    </div>
    <div id="shipping_to_address_wrap">  
      <h2> ...To... </h2>
    <table id="shipping_to_address_table">
      <tr class="ship_row">
        <td class="ship_label">Name:</td>
        <td class="info"><%= @order.name %></td>
      </tr>
      <tr class="ship_row">        
        <td class="ship_label">Address:</td>
        <td class="info"><%= @order.address %></td>
      </tr>
        <% if @order.address2 != nil %>
        <tr class="ship_row">
        <td class="ship_label">Address(2):</td>
        <td class="info"><%= @order.address2 %></td>
        </tr>
        <% end %>
      <tr class="ship_row"> 
        <td class="ship_label">City:</td> 
        <td class="info"><%= @order.city %></td>
      </tr>
      <tr class="ship_row">  
        <td class="ship_label">State:</td>
        <td class="info"><%= @order.state %></td>
      </tr>
      <tr class="ship_row">  
        <td class="ship_label">Zip:</td>
        <td class="info"><%= @order.zip %></td>
      </tr>  
    </table>
  </div>
  <br />
  



  </div>
</div>
     
    